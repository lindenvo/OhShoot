<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:fontFamily="monospace"
        android:text="SCORE: "
        android:textColor="@color/white"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:text="Tap to Start"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/stringhini"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/stringhini" />

        <ImageView
            android:id="@+id/bettereric"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bettereric" />

        <ImageView
            android:id="@+id/baderic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/baderic" />

        <ImageView
            android:id="@+id/badericlr"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/badericlr" />

        <ImageView
            android:id="@+id/badericud"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/badericud" />

        <ImageView
            android:id="@+id/badericdu"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/badericdu" />

        <ImageView
            android:id="@+id/gooderic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/gooderic" />

        <ImageView
            android:id="@+id/goodericlr"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/goodericlr" />

        <ImageView
            android:id="@+id/goodericud"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/goodericud" />

        <ImageView
            android:id="@+id/goodericdu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/goodericdu" />

        <ImageView
            android:id="@+id/sleepyeric"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/sleepyeric" />

        <ImageView
            android:id="@+id/life1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/life1" />

        <ImageView
            android:id="@+id/life2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/life2" />

        <ImageView
            android:id="@+id/life3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/life3" />

        <ImageView
            android:id="@+id/death1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/death1" />

        <ImageView
            android:id="@+id/death2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/death2" />

        <ImageView
            android:id="@+id/death3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/death3" />

    </FrameLayout>

</LinearLayout>
